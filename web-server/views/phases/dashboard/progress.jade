extends ../../layout

block content
  h1 Phase #{phase.number} Progress

  ul.list-unstyled
    for learner in learners
      li
        div
          a(href="/phases/#{phase.number}/dashboard/learners/#{learner.handle}")= learner.handle
        div
          small
            span phase:
            span #{learner.currentPhaseWeekNumber}/8
          progress.skill-progress(value=learner.currentPhaseWeekNumber max=8)
        div
          small
            span skills:
            span #{learner.skillsNumerator}&nbsp;/&nbsp;#{learner.skillsDenominator}
          progress.skill-progress(value=learner.skillsNumerator max=learner.skillsDenominator)
        hr
