extends ../layout

block content

  h1= user.name
  h3= user.handle

  if user.exit_phase
    h6 Exit Phase: #{user.exit_phase}
  else if user.phase
    h6 Phase: #{user.phase}

  ul.list-inline
    li
      a(href="https://echo.learnersguild.org/users/"+user.handle, target="_blank") echo
    li
      a(href="https://github.com/"+user.handle, target="_blank") GitHub
    li
      a(href="mailto:"+user.email) Email
    li
      a(href="https://learnersguild.slack.com/messages/@"+user.handle, target="_blank") Slack DM

  img(src=user.avatarUrl)


  pre= inspect(user)
